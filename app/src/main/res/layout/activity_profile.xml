<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imghero"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:src="@drawable/mypic" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imghero"
        android:text="Shikhar Dixit"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtname"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imghero"
        android:text="shikhar1097@gmail.com"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtmail"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imghero"
        android:text="+91 8765681707"
        android:textColor="#000000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnmoreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imghero"
        android:layout_margin="20dp"
        android:background="#1769aa"
        android:text="More Information"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit The App"
        android:background="#ff3d00"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textColor="#ffffff"/>
</RelativeLayout>